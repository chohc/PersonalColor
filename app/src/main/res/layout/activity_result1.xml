<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_spring3"
    android:gravity="bottom"
    tools:context=".ResultActivity1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="이런 색 옷을 추천해요"
        android:textColor="#2C5970"
        android:textSize="21sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/questionButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/question_mark"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">

        <View
            android:id="@+id/colo1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="#FF0000" />

        <View
            android:id="@+id/color2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="#FF0000" />

        <View
            android:id="@+id/color3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="#FF0000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <View
            android:id="@+id/color4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="#FF0000" />

        <View
            android:id="@+id/color5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="#FF0000" />

        <View
            android:id="@+id/color6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="#FF0000" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="나와 같은 톤 연예인이에요"
        android:textColor="#2C5970"
        android:textSize="21sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="10dp"
            android:text=" 아이유, 유인나, 송혜교, 윤아"
            android:textColor="#2C5970"
            android:textSize="21sp"
            android:textStyle="bold"
            android:background="@drawable/seleb_rect"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:padding="12dp"
            android:text="다시하기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#F2BEAA"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="나가기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#F2BEAA"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>