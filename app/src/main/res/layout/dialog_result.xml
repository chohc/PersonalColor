        android:id="@+id/imageView1_dialog"
        android:layout_width="113dp"
        android:layout_height="200dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test_person" />

    <ImageView
        android:id="@+id/overlayImageView1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/white_clothes"
        app:layout_constraintBottom_toBottomOf="@id/imageView1_dialog"
        app:layout_constraintEnd_toEndOf="@id/imageView1_dialog"
        app:layout_constraintStart_toStartOf="@id/imageView1_dialog"
        app:layout_constraintTop_toTopOf="@id/imageView1_dialog"
        app:layout_constraintVertical_bias="1.0" />

