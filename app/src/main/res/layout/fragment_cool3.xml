<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Cool3Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <ImageView
        android:id="@+id/cool3_imageView1"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/test_person"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/cool3_overlayImageView1"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/white_clothes"
        app:layout_constraintBottom_toBottomOf="@id/cool3_imageView1"
        app:layout_constraintEnd_toEndOf="@id/cool3_imageView1"
        app:layout_constraintStart_toStartOf="@id/cool3_imageView1"
        app:layout_constraintTop_toTopOf="@id/cool3_imageView1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/cool3_imageView2"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/test_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_50"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/cool3_overlayImageView2"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/white_clothes"
        app:layout_constraintBottom_toBottomOf="@id/cool3_imageView2"
        app:layout_constraintEnd_toEndOf="@id/cool3_imageView2"
        app:layout_constraintStart_toStartOf="@id/cool3_imageView2"
        app:layout_constraintTop_toTopOf="@id/cool3_imageView2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>